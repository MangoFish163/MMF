# we use Shopify as our ecommerce platform
{%- comment -%}
# Caution! Please read https://help.shopify.com/en/manual/promoting-marketing/seo/editing-robots-txt before proceeding to make changes to this file.
{% endcomment %}
{% for group in robots.default_groups %}
  {{- group.user_agent }}

  {%- for rule in group.rules -%}
    {%- if rule.directive == 'Disallow' -%}
      {%- if rule.value == '/policies/' or rule.value == '/*/policies/' or rule.value == '/collections/*+*' or rule.value == '/collections/*sort_by*' or rule.value == '/*/collections/*sort_by*' or rule.value == '/collections/*%2B*' or rule.value == '/collections/*%2b*' or rule.value == '/*/collections/*+*' or rule.value == '/*/collections/*%2B*'or rule.value == '/*/collections/*%2b*' or rule.value == '*/collections/*%2b*' or rule.value == '*/collections/*filter*&*filter*' or rule.value == '/blogs/*+*' or rule.value == '/blogs/*%2B*' or rule.value == '/blogs/*%2b*' or rule.value == '/*/blogs/*+*' or rule.value == '/*/blogs/*%2B*' or rule.value == '/*/blogs/*%2b*' -%}
        {%- continue -%}
      {%- endif -%}
    {%- endif -%}

    {{ rule }}
  {%- endfor -%}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /*?variant=*' }}
  {%- endif -%}

  {%- if group.sitemap != blank -%}
      {{ group.sitemap }}
  {%- endif -%}
{% endfor %}
