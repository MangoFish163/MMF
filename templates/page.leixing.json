{"sections":{"main":{"type":"main-page","disabled":true,"settings":{"padding_top":36,"padding_bottom":28}},"image_with_link_dEKEhi":{"type":"image-with-link","name":"t:sections.image-with-link.presets.name","settings":{"banner_image":"shopify:\/\/shop_images\/player_page_1.png","image_width":"100%","image_height":"auto","banner_link":"shopify:\/\/pages\/joueurs","content_alignment":"center","mobile_banner_image":"shopify:\/\/shop_images\/player_page_1.png","mobile_image_width":"100%","mobile_image_height":"auto","mobile_banner_link":"shopify:\/\/pages\/joueurs"}},"newsletter_pNr3jJ":{"type":"newsletter","blocks":{"paragraph_KBhXqA":{"type":"paragraph","settings":{"text":"<h2>Acheter par joueur<\/h2>"}}},"block_order":["paragraph_KBhXqA"],"name":"t:sections.newsletter.presets.name","settings":{"color_scheme":"","full_width":true,"padding_top":20,"padding_bottom":20}},"custom_liquid_HzKExt":{"type":"custom-liquid","custom_css":[],"name":"t:sections.custom-liquid.presets.name","settings":{"custom_liquid":"<div class=\"page-width\">\n  <!-- 搜索框 -->\n  <input type=\"text\" id=\"collection-search\" placeholder=\"Rechercher le nom du joueur\" class=\"collection-search\">\n\n  <ul class=\"collection-list\">\n    {% for collection in collections %}\n      {% assign leixing_value = collection.metafields.custom.leixing.value %}\n      {% if leixing_value == \"star\" %}\n        <li class=\"collection-item\" data-title=\"{{ collection.title | downcase }}\">\n          <a href=\"{{ collection.url }}\" class=\"collection-link\">{{ collection.title }}<\/a>\n        <\/li>\n      {% endif %}\n    {% endfor %}\n  <\/ul>\n<\/div>\n\n<style>\n  .page-width {\n    max-width: 1200px;\n    margin: 0 auto;\n    padding: 0 20px;\n  }\n\n  .collection-search {\n    width: 100%;\n    padding: 10px;\n    margin-bottom: 20px;\n    font-size: 16px;\n    border: 2px solid #ccc;\n    border-radius: 5px;\n  }\n\n  .collection-list {\n    list-style-type: none;\n    padding: 0;\n    margin: 0;\n    display: grid;\n    grid-template-columns: repeat(4, 1fr);\n    gap: 20px;\n  }\n\n  .collection-item {\n    border: 2px solid #e0e0e0;\n    padding: 10px;\n    text-align: center;\n    background-color: #ffffff;\n  }\n\n  .collection-link {\n    text-decoration: none;\n    color: black;\n  }\n\n  .collection-link:hover {\n    text-decoration: underline;\n  }\n\n  @media (max-width: 768px) {\n    .collection-list {\n      grid-template-columns: 1fr;\n    }\n  }\n<\/style>\n\n<script>\n  document.addEventListener('DOMContentLoaded', function () {\n    const searchInput = document.getElementById('collection-search');\n    const collectionItems = document.querySelectorAll('.collection-item');\n\n    searchInput.addEventListener('input', function () {\n      const query = this.value.toLowerCase().trim();\n\n      collectionItems.forEach(item => {\n        const title = item.getAttribute('data-title');\n        if (title.includes(query)) {\n          item.style.display = '';\n        } else {\n          item.style.display = 'none';\n        }\n      });\n    });\n  });\n<\/script>","color_scheme":"","padding_top":4,"padding_bottom":52}}},"order":["main","image_with_link_dEKEhi","newsletter_pNr3jJ","custom_liquid_HzKExt"]}