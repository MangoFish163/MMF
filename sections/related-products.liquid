{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

.related-products__wrapper {
  position: relative;
  padding: 0 24px;
}

.related-products__list.horizontal-scroll {
  display: flex;             
  gap: 16px;                 
  overflow-x: auto;         
  scroll-behavior: smooth;   
  padding-bottom: 8px;      
  -webkit-overflow-scrolling: touch;
  list-style: none;
  padding: 0;
  scrollbar-width: none;
  -ms-overflow-style: none;
  padding-left: 0;
  padding-right: 0;
}

.related-products__list.horizontal-scroll::-webkit-scrollbar {
  display: none;
}

.recommended_product_card {
  flex: 0 0 auto;            
  width: calc((100% - ({{ section.settings.columns_desktop }} - 1) * 16px) / {{ section.settings.columns_desktop }}); 
}

@media screen and (max-width: 749px) {
  .recommended_product_card {
    width: calc((100% - ({{ section.settings.columns_mobile }} - 1) * 16px) / {{ section.settings.columns_mobile }}); 
  }
}

.scroll-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.95);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 2;
  transition: all 0.3s ease;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.12);
}

.scroll-button:hover {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.18);
  transform: translateY(-50%) scale(1.05);
}

.scroll-button:disabled {
  opacity: 0.3;
  cursor: not-allowed;
  transform: translateY(-50%) scale(1);
}

.scroll-button--prev {
  left: 0;
}

.scroll-button--next {
  right: 0;
}

.scroll-button svg {
  width: 22px;
  height: 22px;
  stroke: currentColor;
  stroke-width: 2;
  fill: none;
}

@media screen and (max-width: 749px) {
  .related-products__wrapper {
    padding: 0 20px;
  }
  
  .scroll-button {
    width: 40px;
    height: 40px;
  }
  
  .scroll-button--prev {
    left: 0;
  }
  
  .scroll-button--next {
    right: 0;
  }
  
  .scroll-button svg {
    width: 18px;
    height: 18px;
  }
}

@media screen and (max-width: 550px) {
  .related-products__wrapper {
    padding: 0 18px;
  }
  
  .scroll-button {
    width: 36px;
    height: 36px;
  }
  
  .scroll-button svg {
    width: 16px;
    height: 16px;
  }
}
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <product-recommendations
    class="related-products page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    data-url="{{ routes.product_recommendations_url }}?limit={{ section.settings.products_to_show }}"
    data-section-id="{{ section.id }}"
    data-product-id="{{ product.id }}"
  >
    {% if recommendations.performed and recommendations.products_count > 0 %}
      <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
      <div class="related-products__wrapper">
        <button class="scroll-button scroll-button--prev" aria-label="Previous products">
          <svg viewBox="0 0 24 24">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        
        <ul class="related-products__list horizontal-scroll" role="list">
          {% assign skip_card_product_styles = false %}
          {% for recommendation in recommendations.products %}
            {% if recommendation.tags contains 'login_only' and customer == null %}
              {% continue %}
            {% endif %}
            {% if recommendation.id == 8078312341551 or recommendation.id == 8078312079407 or recommendation.id == 8049150066735 or recommendation.id == 7968713080879 %}
              {% continue %}
            {% endif %}
            <li class="grid__item recommended_product_card">
              {% render 'card-product',
                card_product: recommendation,
                media_aspect_ratio: section.settings.image_ratio,
                image_shape: section.settings.image_shape,
                show_secondary_image: section.settings.show_secondary_image,
                show_vendor: section.settings.show_vendor,
                show_rating: section.settings.show_rating,
                skip_styles: skip_card_product_styles
              %}
            </li>
            {% assign skip_card_product_styles = true %}
          {% endfor %}
        </ul>
        
        <button class="scroll-button scroll-button--next" aria-label="Next products">
          <svg viewBox="0 0 24 24">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </product-recommendations>
  {% if section.settings.image_shape == 'arch' %}
    {{ 'mask-arch.svg' | inline_asset_content }}
  {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const productRec = document.querySelector('product-recommendations');
  if (!productRec) return;

  const observer = new MutationObserver(() => {
    const wrapper = productRec.querySelector('.related-products__wrapper');
    if (wrapper) {
      console.log(wrapper); 
      initScroll(wrapper);
      observer.disconnect(); 
    }
  });

  observer.observe(productRec, { childList: true, subtree: true });
});

function initScroll(wrapper) {
  const scrollContainer = wrapper.querySelector('.horizontal-scroll');
  const prevButton = wrapper.querySelector('.scroll-button--prev');
  const nextButton = wrapper.querySelector('.scroll-button--next');

  if (!scrollContainer || !prevButton || !nextButton) return;

  function updateButtons() {
    const scrollLeft = scrollContainer.scrollLeft;
    const maxScroll = scrollContainer.scrollWidth - scrollContainer.clientWidth;
    prevButton.disabled = scrollLeft <= 0;
    nextButton.disabled = scrollLeft >= maxScroll - 1;
  }

  function scroll(direction) {
    const itemWidth = scrollContainer.querySelector('.recommended_product_card').offsetWidth;
    const gap = 16;
    const isMobile = window.innerWidth < 750;
    const scrollAmount = (itemWidth + gap) * (isMobile ? 2 : 4);

    scrollContainer.scrollBy({
      left: direction === 'next' ? scrollAmount : -scrollAmount,
      behavior: 'smooth'
    });
  }

  prevButton.addEventListener('click', () => scroll('prev'));
  nextButton.addEventListener('click', () => scroll('next'));
  scrollContainer.addEventListener('scroll', updateButtons);

  updateButtons();
}

</script>

