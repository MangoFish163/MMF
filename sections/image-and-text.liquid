{% schema %}
{
  "name": "image and text",
  "blocks": [
    {
      "type": "module",
      "name": "Single Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "主图"
        },
        {
          "type": "image_picker",
          "id": "sort",
          "label": "排序icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "标题"
        },
        {
          "type": "inline_richtext",
          "id": "description",
          "label": "描述"
        },
        {
          "type": "inline_richtext",
          "id": "description_2",
          "label": "描述2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image And Text"
    }
  ]
}
{% endschema %}

<div class="image_and_text_box">
  <div class="page-width">
    <div class="image_and_text_list">
      {% for block in section.blocks %}
        <div class="image_and_text_item" {{ block.shopify_attributes }}>
          <div class="image_and_text_image">
            {% if block.settings.main_image != blank %}
              <img
                src="{{ block.settings.main_image | image_url: width: 800 }}"
                alt="Main image"
                width="100%"
                height="100%"
                loading="lazy"
              >
            {% endif %}
          </div>
          {% if block.settings.sort != blank %}
            <div class="image_and_text_sort">
              <img
                class="sort_icon"
                src="{{ block.settings.sort | image_url: width: 100 }}"
                alt="Sort icon"
                width="100%"
                height="100%"
                loading="lazy"
              >
            </div>
          {% endif %}
          <div class="image_and_text_content">
            {% if block.settings.title != blank %}
              <h3 class="single_item_title">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.description != blank %}
              <p class="description">{{ block.settings.description }}</p>
            {% endif %}
            {% if block.settings.description_2 != blank %}
              <p class="description">{{ block.settings.description_2 }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>

  .image_and_text_list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 50px;
  }
  .image_and_text_item {
    display: flex;
    flex-direction: column;
    margin-bottom: 0;
    /* justify-content: center; */
    align-items: center;
    padding: 0 32px;
  }
  .image_and_text_image{
    padding:10px 50px;
  }
  .image_and_text_image img {
    max-width: 100%;
    margin-right: 0;
  }
  .image_and_text_content {
    max-width: 100%;
    display:flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .sort_icon {
    width: 44px;
    height: 44px;
  }
  .single_item_title {
    font-size: 2.5rem;
    margin: 20px 0; 
  }
  .description {
    color: #666;
    /* text-align: center; */
    margin:2px 0;
    width:100%;
  }

  @media screen and (max-width: 989px) {
    .image_and_text_list {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
    .image_and_text_item {
      padding: 0 20px;
    }
    .image_and_text_image {
      padding: 15px 30px;
    }
    .single_item_title {
      font-size: 2rem;
    }
  }

  @media screen and (max-width: 749px) {
    .image_and_text_list {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .image_and_text_item {
      flex-direction: row;
      align-items: center;
      padding: 10px;
      gap: 15px;
    }
    .image_and_text_sort {
      display: block;
      flex: 0 0 44px;
      order: 1;
    }
    .image_and_text_image {
      padding: 0;
      flex: 0 0 120px;
      order: 2;
    }
    .image_and_text_image img {
      width: 100%;
      height: auto;
    }
    .image_and_text_content {
      flex: 1;
      align-items: flex-start;
      order: 3;
    }
    .single_item_title {
      font-size: 1.6rem;
      margin-bottom: 5px;
    }
    .description {
      text-align: left;
      font-size: 0.9rem;
    }
  }
</style>
